page {
  padding-bottom: 90rpx;
}
.pay .address {
  width: 100vw;
  border-bottom: 3rpx solid #c4c4c4;
}
.pay .address .address_tool {
  padding: 20rpx;
}
.pay .address .address_tool button {
  width: 60%;
}
.pay .address .user_info_wrap {
  padding: 20rpx;
}
.pay .address .user_info_wrap .user_info {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}
.pay .cart_list .list_item {
  display: flex;
  padding: 10rpx;
}
.pay .cart_list .list_item .select {
  display: flex;
  justify-content: center;
  align-self: center;
  flex: 1;
}
.pay .cart_list .list_item .item_info {
  flex: 9;
  display: flex;
  justify-content: center;
  align-self: center;
}
.pay .cart_list .list_item .item_info .info_img {
  flex: 2;
  text-align: center;
}
.pay .cart_list .list_item .item_info .info_img image {
  width: 80%;
}
.pay .cart_list .list_item .item_info .info_content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 4;
}
.pay .cart_list .list_item .item_info .info_content .info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.pay .cart_list .list_item .item_info .info_content .info_money_wrap {
  display: flex;
  justify-content: space-between;
}
.pay .cart_list .list_item .item_info .info_content .info_money_wrap .info_money {
  color: var(--themeColor);
}
.pay .cart_list .list_item .item_info .info_content .info_money_wrap .info_tool {
  display: flex;
  justify-content: space-around;
}
.pay .cart_list .list_item .item_info .info_content .info_money_wrap .info_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.pay .cart_list .list_item .item_info .info_content .info_money_wrap .info_tool .info_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay .cart_list .list_item:not(:last-of-type) {
  border-bottom: 1rpx solid #c4c4c4;
}
.pay .footer_tool {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100vw;
  z-index: 9;
  background-color: #fff;
}
.pay .footer_tool .all_select {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay .footer_tool .total_money_wrap {
  flex: 3;
  flex-direction: column;
  padding-right: 15rpx;
  text-align: right;
}
.pay .footer_tool .total_money_wrap .total_money {
  font-size: 34rpx;
}
.pay .footer_tool .total_money_wrap .total_money .total_money_text {
  color: var(--themeColor);
}
.pay .footer_tool .tool_pay {
  flex: 2;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
